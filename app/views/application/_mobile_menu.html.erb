<!-- Mobile Menu Overlay -->
<div data-mobile-menu-target="overlay" data-action="click->mobile-menu#close" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden"></div>

<!-- Mobile Menu -->
<div data-mobile-menu-target="menu" class="fixed top-0 right-0 bottom-0 w-64 bg-white shadow-lg z-50 mobile-menu hidden">
  <div class="flex flex-col h-full">
    <div class="flex items-center justify-between p-4 border-b">
      <button data-action="mobile-menu#close" class="h-9 w-9 p-0 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6">
          <path d="M18 6 6 18"></path>
          <path d="m6 6 12 12"></path>
        </svg>
      </button>
    </div>
    <nav class="flex-1 overflow-y-auto p-4">
      <ul class="space-y-4">
        <li>
          <a data-action="click->mobile-menu#close" href="/workouts" class="block py-2 px-4 text-sm font-medium hover:bg-orange-50 rounded-md">Workouts</a>
        </li>
        <li>
          <a data-action="click->mobile-menu#close" href="/exercises" class="block py-2 px-4 text-sm font-medium hover:bg-orange-50 rounded-md">Exercises</a>
        </li>
        <% if authenticated? %>
          <li>
            <%= button_to "Log out", session_path, method: :delete, class:"rounded-md bg-orange-500 px-3 py-1.5 text-sm font-medium text-white hover:bg-orange-600", data: { action: "click->mobile-menu#close" } %>
          </li>
        <% else %>
          <li>
            <%= link_to "Login", new_session_path, class:"rounded-md border border-gray-200 px-3 py-1.5 text-sm font-medium", data: { action: "click->mobile-menu#close" } %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>

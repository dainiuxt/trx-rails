<!-- Exercise Library Section -->
<section id="exercises" class="w-full py-12 md:py-24 lg:py-32 bg-orange-50">
  <div class="container mx-auto px-4 md:px-6">
    <div class="flex flex-col items-center justify-center space-y-4 text-center">
      <div class="space-y-2">
        <h2 class="text-3xl font-bold tracking-tighter md:text-4xl">Exercise Library</h2>
        <p class="max-w-[900px] text-gray-500 md:text-xl">
          Explore our comprehensive collection of TRX exercises categorized by muscle group.
        </p>
      </div>
    </div>
    
    <!-- Exercise Category Tabs -->
    <div class="mt-8 w-full max-w-4xl mx-auto">
      <!-- Mobile Tabs (Vertical) -->
      <div class="flex flex-col w-full md:hidden space-y-1">
        <button class="w-full justify-start text-left px-4 py-3 border border-gray-200 rounded-md bg-orange-100 text-orange-800">Upper Body</button>
        <button class="w-full justify-start text-left px-4 py-3 border border-gray-200 rounded-md">Lower Body</button>
        <button class="w-full justify-start text-left px-4 py-3 border border-gray-200 rounded-md">Core</button>
        <button class="w-full justify-start text-left px-4 py-3 border border-gray-200 rounded-md">Full Body</button>
        <button class="w-full justify-start text-left px-4 py-3 border border-gray-200 rounded-md">Cardio</button>
      </div>

      <!-- Desktop Tabs (Horizontal) -->
      <div class="hidden md:block">
        <div class="inline-flex h-10 items-center justify-center rounded-md bg-gray-100 p-1 text-gray-500 w-full">
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium bg-white text-gray-900 shadow-sm flex-1 min-w-[120px]">Upper Body</button>
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium flex-1 min-w-[120px]">Lower Body</button>
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium flex-1 min-w-[120px]">Core</button>
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium flex-1 min-w-[120px]">Full Body</button>
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium flex-1 min-w-[120px]">Cardio</button>
        </div>
      </div>

      <!-- Exercise Cards -->
      <div class="mt-6 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        <%= render "card" %>
      </div>
    </div>
  </div>
</section>
<section class="w-full py-12 md:py-24">
  <div class="container mx-auto px-4 md:px-6">
    <div class="flex flex-col items-center justify-center space-y-4 text-center mb-8">
      <div class="space-y-2">
        <h1 class="text-3xl font-bold tracking-tighter md:text-4xl">Edit Exercise</h1>
        <p class="max-w-[700px] text-gray-500 md:text-xl">
          Add exercise details, level, target muscle group and estimated training time.
        </p>
      </div>
    </div>

    <div class="mx-auto max-w-2xl">
      <div class="rounded-lg border bg-white shadow-sm overflow-hidden">
        <div class="p-6 bg-orange-50 border-b">
          <h2 class="text-xl font-semibold"><%= @exercise.name %></h2>
          <p class="text-sm text-gray-500 mt-1">Please fill out all required fields marked with an asterisk (*)</p>
        </div>

        <%= render "form", exercise: @exercise %>
        <div class="p-6 space-y-6">
          <div class="pt-6">
            <%= link_to "Cancel", exercise_path, class: "w-full inline-flex justify-center rounded-md border border-gray-200 px-3 py-1.5 text-sm font-medium" %>
          </div> 
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Workout Plans Section -->
<section id="workouts" class="w-full py-12 md:py-24 lg:py-32 bg-orange-50">
  <div class="container mx-auto px-4 md:px-6">
    <div class="flex flex-col items-center justify-center space-y-4 text-center">
      <div class="space-y-2">
        <h2 class="text-3xl font-bold tracking-tighter md:text-4xl">Workout Plans</h2>
        <p class="max-w-[900px] text-gray-500 md:text-xl">
          Ready-to-use TRX workout plans designed for different fitness levels and goals.
        </p>
      </div>
    </div>
    <div class="w-full pt-12 inline-flex items-center justify-center">
      <%= link_to "Create new workout", new_workout_path, class: "mx-auto w-100 inline-flex items-center justify-center rounded-md bg-orange-500 px-4 py-2 text-sm font-medium text-white hover:bg-orange-600" %>
    </div>
    <div class="mt-8 w-full max-w-4xl mx-auto">
      <div class="mt-6 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        <%= render "card" %>
      </div>
    </div>
  </div>
</section>

<div class="container mx-auto max-w-4xl px-4 py-8 md:px-6 md:py-12">
  <%= link_to workouts_path, class: "inline-flex items-center text-sm font-medium text-orange-500 hover:underline mb-6" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1 h-4 w-4">
      <path d="m15 18-6-6 6-6"></path>
    </svg>
    Back to Workouts
  <% end %>

  <div class="grid gap-8 md:grid-cols-3">
    <div class="md:col-span-2">
      <h1 class="text-3xl font-bold"><%= @workout.name %></h1>

      <div class="mt-2 flex flex-wrap gap-2">
        <div class="rounded-full bg-orange-100 px-3 py-1 text-sm text-orange-700"><%= @workout.difficulty.name %></div>
        <div class="rounded-full bg-orange-100 px-3 py-1 text-sm text-orange-700"><%= @workout.workout_type.name %></div>
        <div class="rounded-full bg-orange-100 px-3 py-1 text-sm text-orange-700 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1 h-3 w-3">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          <%= @workout.duration %> min.
        </div>
      </div>

      <div class="mt-6 flex gap-4">
        <%= link_to edit_workout_path(@workout), class: "inline-flex items-center justify-center rounded-md border border-gray-200 px-4 py-2 text-sm font-medium" do %>
          Edit Workout
        <% end %>
      </div>

      <div class="mt-4 text-gray-500">
        <%= @workout.workout_description%>
      </div>
    </div>

    <%= render "workout_summary" %>
    
  </div>

  <div class="mt-12">
    <h2 class="text-2xl font-bold mb-6">Workout Exercises</h2>
    <div class="space-y-6">
      <%= render "workout_exercises" %>
    </div>
  </div>
</div>
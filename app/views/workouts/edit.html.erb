<section class="w-full py-12 md:py-24">
  <div class="container mx-auto px-4 md:px-6">
    <div class="flex flex-col items-center justify-center space-y-4 text-center mb-8">
      <div class="space-y-2">
        <h1 class="text-3xl font-bold tracking-tighter md:text-4xl">Edit Workout</h1>
        <p class="max-w-[700px] text-gray-500 md:text-xl">
          Edit TRX workout.
        </p>
      </div>
    </div>

    <div class="mx-auto max-w-2xl">
      <div class="rounded-lg border bg-white shadow-sm overflow-hidden">
        <div class="p-6 bg-orange-50 border-b">
          <h2 class="text-xl font-semibold">Workout Details</h2>
          <p class="text-sm text-gray-500 mt-1">Please fill out all required fields marked with an asterisk (*)</p>
        </div>

        <%= render "form", workout: @workout %>

        <div class="mt-6 text-center">
          <%= link_to workouts_path, class: "inline-flex items-center text-sm font-medium text-orange-500 hover:underline" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1 h-4 w-4">
              <path d="m15 18-6-6 6-6"></path>
            </svg>
            Cancel and Back to Workout Library
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
